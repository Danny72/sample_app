<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
	<%= gravatar_for @user, size: 120 %>   
	<%= @user.name %>
	<%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
	<% @microposts.each do |mp| %>
	  <%= render mp %>
	<% end %>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
